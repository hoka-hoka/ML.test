mixin search()
  .search
    +input-checkbox({
      id: "sr-form",
      mod: {visible: "hidden"},
    })
    label.search__label(for="sr-form" data-click="Click me")
    main.search__menu
      label.search__close(for="sr-form")
      form(action="")
        fieldset.search__container
          legend.search__title Найдём номера под ваши пожелания
          ul.search__schedule(role='none')
            li.search__item.search__item_middle_margin-bottom
              .search__date
                -for(var i=0; i<2; ++i)
                  +input-date({
                    id: date_id[i],
                    text: sr_label[i],
                    placeholder: "ДД.ММ.ГГГГ",
                  }) 
                - var i = null;
                +calendar()      
            li.search__item.search__item_large_margin-bottom
              .search__content
                +input-dropdown({
                  id: "s-gues",
                  text: "Гости",
                  placeholder: "Сколько гостей",
                  role: "gues",
                  list: guesList,
                })
            li.search__item
              +button({
                theme: "purple",
                text: "Подобрать номер",
                mod: {width: "broad"},
              })
              +icon({
                id: "arrow-big",
                width: "18",
                height: "18",
                viewBox: "0 0 17 18",
                alt: "Подобрать номер",
                mod: {position: "center", color: "light"},
              })