block input
.search.search_bg
  input.visuallyhidden.search__checkbox.search__checkbox_open(type="checkbox" id="sr-form")
  label.search__label(for="sr-form" data-click="Click me")
  main.rectangle.search__rectangle
    label.search__close(for="sr-form")
    form(action="")
      fieldset.rectangle__container
        legend.rectangle__title Найдём номера под ваши пожелания
        ul.rectangle__list(role='none')
          li.rectangle__item
            .rectangle__date
              -for(var i=0; i<2; ++i)
                .rectangle__date-col
                  label.label.label-large(for=sr_timetable_id[i])=sr_timetable[i]
                  .rectangle__content.rectangle__content_margin--unset
                    +input-date(sr_timetable_id[i],"ДД.ММ.ГГГГ", "")
                    +buttons(5, "", "js--click")
              - var i = null;
            +calendar()

          li.rectangle__item.rectangle__item-mb--30
            label.label.label-large(for='s-gues')=sr_gues
            .rectangle__content
              +input-dropdown("s-gues", "Сколько гостей", "", "gues")
              +input-options(1, "gues")
          li.rectangle__item
            .rectangle__submit
              +buttons(2, 'Подобрать номер', 'button_width')
              +icon("arrow-big", 18, 18, "0 0 17 18", "arrow-big rectangle__arrow-big", "Подобрать номер")