mixin input-dropdown(dropdown)
  - var modClasses = '';
  - if (dropdown.mod) {
  -   var styles = Object.values(dropdown.mod);
  -   for (index in styles) {
  -     modClasses = modClasses + (index != 0 ? ' ' : '') + 'input-dropdown_' + styles[index];
  -   }
  - }

  .input-dropdown.input-dropdown_js(class=modClasses)
    .input-dropdown__top
      +label({
        for: dropdown.id,
        text: dropdown.text,
        mod: { font: "large" },
      })
      if dropdown.descr
        span.input-dropdown__descr=dropdown.descr

    .input-dropdown__field
      +input({
        type: "text",
        id: dropdown.id,
        value: dropdown.value,
        placeholder: dropdown.placeholder,
        role: dropdown.role,
        readonly: true,
        mod: {clicked: "clicked-js", placeholderClolor: "placeholder-dark"},
      })
      +button({
        mod: {arrow: "arrow", clicked: "clicked-js"}
      })
      +input-options({
        role: dropdown.role,
        list: dropdown.list,
        btnPannel: dropdown.btnPannel,
      })