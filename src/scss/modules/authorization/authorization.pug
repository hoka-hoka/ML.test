mixin authorization()
  .authorization
    .rectangle
      form(action="" name="aut")
        fieldset.rectangle__container
          legend.rectangle__title Войти
          ul.rectangle__schedule(role='none')
            li.rectangle__item-top
              .rectangle__content
                +input-email("aut-email", " input_placeholder-light", "Email")
                label.label.label_hidden(for='aut-email') Email
              .rectangle__content
                +input-password("aut-pass", "input_placeholder-light", "Пароль")
                label.label.label_hidden(for='aut-pass') Пароль
            li.rectangle__item-bottom
              .rectangle__submit
                +buttons(2, 'Войти', 'button_width')
                +icon("arrow-big", 18, 18, "0 0 17 18", "arrow-big rectangle__arrow-big", "Войти")
            .rectangle__create
              p.rectangle__create-text Нет акаунта на Toxin?
              +buttons( 1, 'Создать', 'button_end-focus')