mixin card(number, status, price, checked, reviews, index)
  li.card__item
    .swiper-container.card__swiper-container
      .swiper-wrapper
        -for(var i=1; i<=4; ++i)
          .swiper-slide
            picture.card__pic
              source.card__img(type="image/webp" srcset="img/card-"+i+".webp")
              source.card__img(type="image/png" srcset="img/card-"+i+".png")
              img.card__img(src="img/card-"+i+".jpg", alt="Номер в гостинице")
      .card__pagination
      .swiper-prev
      .swiper-next
    .card__descr
      .card__content
        .room
          .room__container
            span.room__number #{number}
            strong.room__luxury=status
          .room__container
            span.room__price #{price}&#8381
            span.room__text в сутки
      hr.line.card__line
      .card__content
        +rating(index, checked)
        span.card__value #{reviews}
        span.card__about Отзывов