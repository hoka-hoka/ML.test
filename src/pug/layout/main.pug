doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    if ( templates == 'home' )
      base(href="./")
    else
      base(href="../")

  title #{title}
body(id=title)
  each temp in templates
    case temp
      when "header"
        include ../includes/header
      when "banner"
        include ../includes/banner
      when "product"
        include ../includes/product
      when "details"
        include ../includes/details
      when "footer"
        include ../includes/footer
      when "home"
        include ../includes/home
      when "authorization"
        include ../includes/authorization
      when "registration"
        include ../includes/registration
      when "cards"
        include ../includes/ui-kit/cards
      when "form"
        include ../includes/ui-kit/form
      when "elements"
        include ../includes/ui-kit/elements
      when "header-footer"
        include ../includes/ui-kit/header-footer
      when "sprite"
        include ../../assets/img/svg/sprite.svg





