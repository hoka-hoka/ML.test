.rectangle.registration
  form(action="" name="reg")
    fieldset.rectangle__container
      legend.rectangle__title Регистрация аккаунта
      ul.rectangle__list(role='none')
        li.rectangle__item
          .rectangle__content
            +input-text("reg-name", "Имя", "name", "[а-яёА-ЯЁ]", "input__placeholder_color--25")
            label.visuallyhidden(for="reg-name") #{Имя}
          .rectangle__content
            +input-text("reg-lname", "Фамилия", "lname", "[а-яёА-ЯЁ]", "input__placeholder_color--25")
            label.visuallyhidden(for="reg-lname") #{Фамилия}
          .rectangle__content
            +input-radio("reg-man", "rectangle__input-radio", "input-radio__label label_font--regular registration__label_color--50", "Мужчина", true)
            +input-radio("reg-wom", "rectangle__input-radio", "input-radio__label label_font--regular registration__label_color--50", "Женщина", false)
        li.rectangle__item
          label.label.label_font--bold.label_color--100(for='reg-birth') Дата рождения
          +input-date("reg-birth", "ДД.ММ.ГГГГ", "input__placeholder_color--25.input-mark__list")
        li.rectangle__item
          .label.label_font--bold.label_color--100 Данные для входа в сервис
          .rectangle__content
            label.visuallyhidden(for='reg-email')
            +input-email("reg-email", "input__placeholder_color--25", "Email")
          .rectangle__content
            label.visuallyhidden(for='reg-password')
            +input-password("reg-password", "input__placeholder_color--25", "Пароль")
          .rectangle__content
            +input-toggle("", "Получать спецпредложения")
        li.rectangle__item
          .rectangle__submit
            +buttons(2, 'Перейти к оплате', 'button_width')
            +icon("arrow-big", 16, 16, "0 0 17 18", "arrow-big rectangle__arrow-big", "Войти")
          .rectangle__create
            p.rectangle__create-text Уже есть акаунт на Toxin?
            +buttons( 1, 'Войти', 'authorization__button_size')