block input
.description
  .rectangle.desription__rectangle
    form(action="" name="descr")
      fieldset.rectangle__container
        ul.rectangle__list(role='none')
          li.rectangle__item
            .room
              .room__container
                span.room__number 888
                strong.room__luxury люкс
              .room__container
                span.room__price 9 990₽
                span.room__text в сутки
          li.rectangle__item
            .rectangle__date

              -for(var i=0; i<2; ++i)
                .rectangle__date-col
                  label.label.rectangle__label.label-large(for=dt_timetable_id[i])=dt_timetable[i]

                  .rectangle__content.rectangle__content_margin--unset
                    if date != undefined
                      +input-date("", date[i])
                      +buttons(5, "", "js--click")
                    else
                      +input-date(dt_timetable_id[i], "ДД.ММ.ГГГГ")
                      +buttons(5, "", "js--click")
              - var i = null;
            +calendar()

          li.rectangle__item
            label.label.rectangle__label.label-large(for='arrive')=dt_gues
            .rectangle__content
              +input-dropdown("arrive", "Сколько гостей", "", "gues")
              +input-options(1, "gues")

          li.rectangle__item.rectangle__item-mb--30
            ul.description__list
              li.description__item
                span.description__text 9 990₽ x 4 суток
                span.description__text 39 960₽
              li.description__item
                span.description__text.description__accent.accent Сбор за услуги: скидка 2 179₽
                span.description__text 0₽
              li.description__item
                span.description__text.description__accent.accent Сбор за дополнительные услуги
                span.description__text 300₽

          li.rectangle__item
            .description__result
              span.description__total Итого
              span.description__line
              span.description__total 38 081₽

          li.rectangle__item
            +buttons(2, 'Забронировать', 'button_width')
            +icon("arrow-big", 18, 18, "0 0 17 18", "arrow-big rectangle__arrow-big", "Забронировать")