footer.footer(role="contentinfo")
  hr.footer__line
  .container.footer__container

    ul.footer__row
      li.footer__col.footer__logo
        .logo
          a.logo__link(href="#")
            +icon('pick', 106, 40, "0 0 106 40", "logo", "TOXIN, бронирование номеров")
        .footer__description
          p.footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»

      each value, i in footerList
        li.footer__col
          div.footer__check
            span.offensive=footerList[i]
          ul.footer__list
            if i == footerItem.length - 1
              li.footer__item
                p.footer__text.footer__text_margin=footerItem[i]
                .footer__email
                  form(action="")
                    +input-email("", "input__placeholder_color--25", "Email", true)
            else
              each v in footerItem[i]
                li.footer__item
                  a.footer__links(href="#")=v

  hr.footer__line
  .container.footer__date

    .footer__logo.footer__logo_show
      .logo
        a.logo__link(href="#")
          +icon('pick', 106, 40, "0 0 106 40", "logo", "TOXIN, бронирование номеров")

    p.footer__cop Copyright ©
      time(datetime='2018') 2018 &nbsp
      | Toxin отель. Все права защищены.
    .footer__social
      a.footer__social-link(href="#")
        +icon('twit', 24, 21, "0 0 24 21", "footer__social-icn", "Мы в twitter")
      a.footer__social-link(href="#")
        +icon('face', 22, 22, "0 0 22 22", "footer__social-icn", "Мы в facebook")
      a.footer__social-link(href="#")
       +icon('insta', 22, 22, "0 0 22 22", "footer__social-icn", "Мы в instagram")