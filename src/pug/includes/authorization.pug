block variable
.banner
  .swiper-container.banner__swiper-container
    .swiper-wrapper
      -for(var i=1; i<4; ++i)
        .swiper-slide
          picture
            source(type="image/webp" srcset="assets/img/banner"+i+".webp")
            source(type="image/jpeg" srcset="assets/img/banner"+i+".jpg")
            img.banner__img(src="assets/img/banner"+i+".jpg", alt="Лучшие номера")
      - var i = null;
  .container.banner__container
    .banner__dialog

      .rectangle.authorization
        form(action="" name="aut")
          fieldset.rectangle__container
            legend.rectangle__title Войти
            ul.rectangle__list(role='none')
              li.rectangle__item
                .rectangle__content

                  input.input.authorization__input.input__placeholder_color--25(id='aut-email' type='text' placeholder='Email' required autocorrect='off' autocapitalize='off' autocomplete='email' inputmode='email')

                  label.visuallyhidden(for='aut-email') Email
                .rectangle__content
                  input.input.input__placeholder_color--25(id='aut-pass' type='password' placeholder='Пароль' required autocorrect='off' autocomplete)
                  label.visuallyhidden(for='aut-pass') Пароль
              li.rectangle__item
                .rectangle__submit
                  +buttons(2, 'Войти', 'button_width')
                  +icon("arrow-big", 16, 16, "0 0 17 18", "arrow-big rectangle__arrow-big", "Войти")
                .rectangle__create
                  p.rectangle__create-text Нет акаунта на Toxin?
                  +buttons( 1, 'Создать', 'button_end-focus')