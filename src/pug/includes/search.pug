block input
.modal
  input.visuallyhidden(type="checkbox" id="button")
  label.modal__label(for="button" data-click="Click me")
  main.rectangle.search.search_bg
    label.modal__close(for="button")
    form(action="")
      fieldset.rectangle__container.modal__content
        legend.rectangle__title Найдём номера под ваши пожелания
        ul.rectangle__list(role='none')
          li.rectangle__item
            .rectangle__date
              -for(var i=0; i<2; ++i)
                .rectangle__date-col
                  label.label.label_font--bold.label_color--100(for=sr_timetable_id[i])=sr_timetable[i]
                  .rectangle__content.rectangle__content_margin--unset
                    +input-date("","ДД.ММ.ГГГГ", "")
                    +buttons(5, "", "js--click")
              - var i = null;
            +calendar()

          li.rectangle__item.rectangle__item-mb--30

            label.label.label_font--bold.label_color--100(for='s-gues')=sr_gues

            .rectangle__content
              +input-dropdown("s-gues", "Сколько гостей")
              // +input-options(1, "gues")
          li.rectangle__item
            .rectangle__submit
              +buttons(2, 'Подобрать номер', 'button_width')
              +icon("arrow-big", 16, 16, "0 0 17 18", "arrow-big rectangle__arrow-big", "Подобрать номер")