.uikit
  .uikit__logo
    include ../../components/ui-kit/logo
  .uikit-elements.uikit__container
    .uikit-elements__list
      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark default
          label.uikit-title__label(for="ui-email") text filed
        +input-email("ui-email", "input__placeholder_color--25", "Email")
      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark hover/focus
          label.uikit-title__label(for="ui-text") text filed
        +input-text("ui-text", "This is pretty awesome", "lname", "[а-яёА-ЯЁ]", "input__placeholder_color--75 input__border_color--50")
      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark default
          label.uikit-title__label(for="ui-text") dropdown
        .rectangle__content
          +input-dropdown("ui-gues", "Сколько гостей", "")
          +input-options()

      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark default
          label.uikit-title__label(for="ui-masded-text") masked text filed
        +input-date("ui-masded-text", "ДД.ММ.ГГГГ", "input__placeholder_color--25")

      .uikit-elements__item
        .rectangle__date
            .rectangle__date-col
              label.label.label_font--bold.label_color--100(for="ui-date-drop") date dropdown
              .rectangle__content.rectangle__content_margin--unset
                +input-date("ui-date-drop","ДД.ММ.ГГГГ", "")
                button.button.button_arrow.js--click(type="button")
            .rectangle__date-col
              label.label.label_font--bold.label_color--100(for="ui-date-drop") date dropdown
              .rectangle__content.rectangle__content_margin--unset
                +input-date("ui-date-drop","19.08.2019", "")
                button.button.button_arrow.js--click(type="button")

      .uikit-elements__item
        .uikit-title
          label.uikit-title__label(for="ui-date-filter") filter date dropdown
        .rectangle__content.rectangle__content_margin--unset
          +input-date("ui-date-filter","19 авг - 23 авг", "")
          button.button.button_arrow.js--click(type="button")

      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark default
          label.uikit-title__label(for="ui-subscription") subscription text field
        +input-email("ui-subscription", "input__placeholder_color--25", "Email", "")




      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark default
          label.uikit-title__label(for="ui-dropdown") dropdown
        .rectangle__content
          +input-dropdown("ui-dropdown", "Сколько гостей", "2 спальни, 2 кровати...")
          +input-options()

      .uikit-elements__item
        .uikit-title
          span.uikit-title__mark expanded
          label.uikit-title__label(for="ui-dropdown") dropdown
        .rectangle__content
          +input-dropdown("ui-dropdown", "Сколько гостей", "", "gues")
          +input-options()
