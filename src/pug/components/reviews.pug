mixin reviews(index, title)
  .reviews
    .reviews__container
      if index == 1
        h2.reviews__title=title
        span.reviews__amount=name.length + ' отзыва'
      ul.reviews__list
        each val, i in review
          li.customer.reviews__customer
            .customer__descr
              img.customer__pick(src='assets/img/svg/person'+i+'.svg')
            .customer__descr
              b.customer__text=val.name
              .customer__text=val.time
            .customer__descr
              button.customer__box.customer__box_active--js.customer__box_btn--js(type='button')
                .customer__like
                  +heart("heart_bg", "heart_border", val.like)
            .customer__descr
              .customer__text=val.review