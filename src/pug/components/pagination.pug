mixin pagination()
  .pagination
    ul.pagination__list
      li.pagination__item
        a.pagination__link.pagination__link_active(href="#") 1
      li.pagination__item
        a.pagination__link(href="") 2
      li.pagination__item
        a.pagination__link(href="") 3
      li.pagination__item
        span.pagination__link ...
      li.pagination__item
        a.pagination__link(href="") 15
      li.button.pagination__item
        a.pagination__link.pagination__link_next(href="#")
          +icon('arrow-big', 16, 16, "0 0 17 18", 'pagination__link-icon', 'Следующая страница')
    .pagination__text 1 - 12 из 100+ вариантов аренды