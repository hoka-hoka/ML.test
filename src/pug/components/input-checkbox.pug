mixin input-checkbox(index, item, name, number, role)
  -var status = role
  .input-checkbox.rectangle__input-checkbox
    input.input.visuallyhidden(type='checkbox' name=name + index id=name + '-' + index value=index checked=status)
    label.label.input-checkbox__label.label_color--75(class=number==1 ? 'label_font--regular' :  'label_font--bold' for=name + '-' + index) #{ number==1 ? item : item.header }
    if number == 0
      .rectangle__text-small.input-checkbox__pd=item.title
