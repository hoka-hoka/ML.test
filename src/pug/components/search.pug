main.rectangle.rectangle_modal.search.search_bg
  form(action="")

    fieldset.rectangle__container
      legend.rectangle__title Найдём номера под ваши предложения

    ul.rectangle__list(role='none')
      li.rectangle__item
          block append index
            - var rectangleList = ['Прибытие', 'Выезд'];
            - var label = ['sh-date--arrive', 'sh-date--departure'];
          .rectangle__date
            -for(var i=0; i<2; ++i)
              .rectangle__date-col
                label.label.label_font--bold.label_color--100(for=label[i])=rectangleList[i]
                .input-mark
                  input.input.input-mark__list.rectangle__date_js_click(type='date' required inputmode='numeric' autocomplete='cc-exp')
                  span.arrow.input__arrow.rectangle__date_js_click
            - var i = null;
          include ./calendar

      li.rectangle__item.rectangle__item_mb--30
            block append index
              - var rectangleList = 'Гости';
            .rectangle__gues
              label.label.label_font--bold.label_color--100(for='arrive')=rectangleList
              .input-list
                input.input.input-list_placeholder.rectangle__gues_js_click(name='gues' type='text' placeholder='Сколько гостей' required autocomplete="off")
                span.arrow.input__arrow.rectangle__gues_js_click
                +input-options(1)

      li.rectangle__item
        .rectangle__submit
          +buttons(2, 'Подобрать номер', 'button_width')
          +icon("arrow-big", 16, 16, "0 0 17 18", "arrow-big rectangle__arrow-big", "Подобрать номер")