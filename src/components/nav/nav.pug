mixin nav()
  .nav
    input.input-checkbox.input-checkbox_hidden(type="checkbox" id="hamburger")
    label.nav__label(for="hamburger")
      span.nav__hamburger
    .nav__container
      ul.nav__list
        each v, i in navList
          if i == 0
            li.nav__item
              a.nav__link(disabled)
                .nav__text=v
          else if i == 1 || i == 4
            li.nav__item
              a.nav__link(disabled)
                .nav__text=v
                +button({
                  mod: {arrow: "arrow"}
                })
          else
            li.nav__item
              a.nav__link(disabled)
                .nav__text=v
