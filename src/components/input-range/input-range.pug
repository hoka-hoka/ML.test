mixin input-range(range)
  - const {text, value, step, footnote, mod} = range;
  - let modClasses = '';
  - if (mod) {
  -   let styles = Object.values(mod);
  -   for (index in styles) {
  -     modClasses = modClasses + (index != 0 ? ' ' : '') + 'input-range__field_' + styles[index];
  -   }
  - }

  .input-range.input-range_pull-js
    .input-range__top
      if text
        +label({
          text: text,
          mod: {weigth: "large"},
        })
        span.input-range__price
    input.input-range__field(
      class=modClasses
      type='range' 
      multiple 
      value=value
      step=(step ? step : false)
    )
    if footnote
      span.input-range__text=footnote