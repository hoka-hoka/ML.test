doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
  title #{title}

  if process.env.NODE_ENV === 'production'
    script(type="text/javascript" src="js/vendor.bundle.js")
    
body(id=title)
  +loader()
  .wrapper(hidden)
    each temp in templates
      case temp
        when "header"
          +header()
        when "banner"
          +banner({
            text: "Лучшие номера для вашей работы, отдыха и просто вдохновения",
            mixinName: "search",
          })
        when "footer"
          +footer()
        when "sprite"
          include ../src/assets/img/svg/sprite.svg
        when "product"
          +product()
        when "details"
          +details()
        when "home"
          +home()
        when "auth"
          +auth()
        when "reg"
          +reg()
        when "cards"
          +uikit-type()
        when "form"
          +uikit-forms()
        when "elements"
          +uikit-elements()
        when "header-footer"
          +uikit-header-footer()
      





